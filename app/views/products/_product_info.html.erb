<%= form_for @product do |f| %>
	<%=f.label "name" %>
	<br>
	<%=f.text_field :name %>
	<br>
	<%=f.label "price" %>
	<br>
	<%=f.text_field :price %>
	
	<br>
	<%=f.label "quantity" %>
	<br>
	<%=f.text_field :quantity %>
	<br>
	<%=f.hidden_field :event_id, :value => @event.id %>
	<br>
	<%=f.submit%>
	<br>
<%end%>